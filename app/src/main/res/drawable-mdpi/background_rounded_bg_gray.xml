<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <stroke
        android:width="1dp"
        android:color="@color/primary_action_mode"></stroke>
    <solid android:color="@color/primary_action_mode"></solid>
    <padding android:left="@dimen/margin_10dp"></padding>

    <corners android:bottomLeftRadius="@dimen/margin_5dp"
        android:bottomRightRadius="@dimen/margin_5dp"
        android:topRightRadius="@dimen/margin_5dp"
        android:topLeftRadius="@dimen/margin_5dp"></corners>
</shape>

