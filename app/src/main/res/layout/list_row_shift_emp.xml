<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:clickable="true"
    android:focusable="true"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardBackgroundColor="@color/white"
        app:cardElevation="@dimen/padding_3"
        android:id="@+id/cvCard"
        app:cardUseCompatPadding="true"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:id="@+id/llAllData"
            android:padding="@dimen/padding_7"
            android:layout_height="wrap_content">
            <com.app.iitdelhicampus.utility.CustomTextView
                android:id="@+id/tvDay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapSentences"
                android:gravity="center"
                android:text="1"
                android:layout_gravity="center"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="@dimen/text_12sp"
                android:textStyle="bold" />

            <com.app.iitdelhicampus.utility.CustomTextViewBold
                android:id="@+id/tvEmpCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapSentences"
                android:gravity="center"
                android:text="1"
                android:layout_gravity="center"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="@dimen/text_18sp"
                android:textStyle="bold" />

           <com.app.iitdelhicampus.utility.CustomTextView
                android:id="@+id/tvEmp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapSentences"
                android:gravity="center"
                android:text="SUN"
                android:layout_gravity="center"
                android:singleLine="true"
                android:textColor="@color/black_dark"
                android:textSize="@dimen/text_13sp"
                android:textStyle="bold" />


        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>