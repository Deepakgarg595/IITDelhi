<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/llParentView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/margin_10dp"
    android:layout_marginTop="@dimen/padding_5"
    android:layout_marginRight="@dimen/margin_10dp"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/rlView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_bg"
        android:paddingTop="@dimen/margin_10dp"
        android:paddingBottom="@dimen/margin_10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4">

            <LinearLayout
                android:layout_width="0dip"
                android:layout_weight="1.3"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="vertical">


                <com.app.iitdelhicampus.utility.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:imeOptions="actionNext"
                    android:inputType="textCapSentences"
                    android:paddingLeft="@dimen/padding_5"
                    android:paddingBottom="@dimen/margin_10dp"
                    android:singleLine="true"
                    android:text="Date"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/text_15sp" />

                <com.app.iitdelhicampus.utility.CustomTextView
                    android:id="@+id/tvDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:imeOptions="actionNext"
                    android:inputType="textCapSentences"
                    android:paddingLeft="@dimen/padding_5"
                    android:paddingBottom="@dimen/margin_10dp"
                    android:textColor="@color/black"

                    android:singleLine="true"
                    android:text="10/21/2020 TUE"
                    android:textSize="@dimen/text_15sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dip"
                android:layout_weight=".9"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:orientation="vertical">


                <com.app.iitdelhicampus.utility.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:imeOptions="actionNext"
                    android:inputType="textCapSentences"
                    android:paddingLeft="@dimen/padding_5"
                    android:paddingBottom="@dimen/margin_10dp"
                    android:singleLine="true"
                    android:text="In Time"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/text_15sp" />

                <com.app.iitdelhicampus.utility.CustomTextView
                    android:id="@+id/tvInTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:imeOptions="actionNext"
                    android:inputType="textCapSentences"
                    android:paddingLeft="@dimen/padding_5"
                    android:paddingBottom="@dimen/margin_10dp"
                    android:textColor="@color/black"

                    android:singleLine="true"
                    android:text="10 AM"
                    android:textSize="@dimen/text_15sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dip"
                android:layout_weight=".9"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="vertical">


                <com.app.iitdelhicampus.utility.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:imeOptions="actionNext"
                    android:inputType="textCapSentences"
                    android:paddingLeft="@dimen/padding_5"
                    android:paddingBottom="@dimen/margin_10dp"
                    android:singleLine="true"
                    android:text="Out Time"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/text_15sp" />

                <com.app.iitdelhicampus.utility.CustomTextView
                    android:id="@+id/tvOutTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:imeOptions="actionNext"
                    android:inputType="textCapSentences"
                    android:paddingLeft="@dimen/padding_5"
                    android:paddingBottom="@dimen/margin_10dp"
                    android:textColor="@color/black"
                    android:singleLine="true"
                    android:text="6 PM"
                    android:textSize="@dimen/text_15sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dip"
                android:layout_weight=".9"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="vertical">


                <com.app.iitdelhicampus.utility.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:imeOptions="actionNext"
                    android:inputType="textCapSentences"
                    android:paddingLeft="@dimen/padding_5"
                    android:paddingBottom="@dimen/margin_10dp"
                    android:singleLine="true"
                    android:text="Status"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/text_15sp" />

                <com.app.iitdelhicampus.utility.CustomTextView
                    android:id="@+id/tvStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:imeOptions="actionNext"
                    android:inputType="textCapSentences"
                    android:paddingLeft="@dimen/padding_5"
                    android:paddingBottom="@dimen/margin_10dp"
                    android:singleLine="true"
                    android:text="Present"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_15sp" />


            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/ivSideArrow"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/margin_10dp"
            android:src="@mipmap/side_arrow_black"
            android:tint="@color/grey"
            android:visibility="gone">

        </ImageView>

    </RelativeLayout>


</LinearLayout>